{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "prConcurrentLimit": 0,
  "branchConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "pinDigests": true,
  "packageRules": [
    {
      "matchPackageNames": ["loeken/jellyfin"],
      "matchDatasources": ["docker"],
      "extractVersion": "loeken/jellyfin:(?<version>\\d+\\.\\d+\\.\\d+)",
      "additionalPackageFiles": [
        {
          "fileMatch": ["^charts/jellyfin/Chart\\.yaml$"],
          "appendIfMissing": false,
          "replaceStrings": [
            "appVersion:\\s*\\d+\\.\\d+\\.\\d+",
            "version:\\s*\\d+\\.\\d+\\.\\d+"
          ],
          "versioning": "semver"
        }
      ],
      "automerge": true
    }
  ]
}