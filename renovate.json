{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "matchManagers": ["helmv3"],
      "bumpVersions": [
        {
          "filePatterns": ["{{packageFileDir}}/Chart.yaml"],
          "matchStrings": ["^version:\\s*(?<version>\\d+\\.\\d+\\.\\d+)"],
          "bumpType": "{{#if isPatch}}patch{{else}}minor{{/if}}"
        }
      ]
    }
  ]
}
