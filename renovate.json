{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "prConcurrentLimit": 0,
  "branchConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "pinDigests": true,
  "packageRules": [
    {
      "matchUpdateTypes": ["major", "minor", "patch", "pin", "digest"],
      "automerge": false
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^charts/.*/values\\.yaml$"],
      "matchStrings": [
        "repository:\\s*(?<depName>.+)",
        "tag:\\s*(?<currentValue>[\\w\\.-]+)"
      ],
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "fileMatch": ["^charts/.*/Chart\\.yaml$"],
      "matchStrings": [
        "appVersion:\\s*(?<currentValue>[\\w\\.-]+)"
      ],
      "datasourceTemplate": "docker",
      "packageNameTemplate": "{{ chartPath }}/values.yaml:repository"
    }
  ]
}
