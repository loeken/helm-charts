{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "matchManagers": ["helm-values"],
      "postUpgradeTasks": {
        "commands": [
          "yq e '.version = \"{{newVersion}}\" | .appVersion = \"{{newVersion}}\"' -i '{{{yamlFile}}}'"
        ],
        "fileFilters": [
          "**/Chart.yaml"
        ],
        "executionMode": "update"
      }
    }
  ],
  "helm-values": {
    "fileMatch": [
      "**/values.yaml"
    ]
  }
}