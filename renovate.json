{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "regexManagers": [
    {
      "fileMatch": ["^charts/jellyfin/values.yaml$"],
      "matchStrings": [
        "^\\s*tag:\\s*\"?(?<currentValue>\\d+\\.\\d+\\.\\d+)\"?"
      ],
      "datasourceTemplate": "docker",
      "packageNameTemplate": "loeken/jellyfin",
      "versioningTemplate": "loose"
    },
    {
      "fileMatch": ["^charts/jellyfin/Chart.yaml$"],
      "matchStrings": [
        "^appVersion:\\s*(?<currentValue>\\d+\\.\\d+\\.\\d+)$",
        "^(?!(\\s*[-]?\\s*name:)).*^version:\\s*(?<currentValue>\\d+\\.\\d+\\.\\d+)$"
      ],
      "datasourceTemplate": "docker",
      "packageNameTemplate": "loeken/jellyfin",
      "versioningTemplate": "loose"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["loeken/jellyfin"],
      "groupName": "jellyfin",
      "automerge": true
    }
  ]
}
