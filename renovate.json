{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "prConcurrentLimit": 0,
  "branchConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "pinDigests": true,
  "packageRules": [
    {
      "matchUpdateTypes": ["major", "minor", "patch", "pin", "digest"],
      "automerge": false
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^charts/home-assistant/Chart\\.yaml$"],
      "matchStrings": [
        "^(?<!-\\s*)appVersion:\\s*(?<currentValue>[\\w\\.-]+)\\s*$"
      ],
      "datasourceTemplate": "docker",
      "packageNameTemplate": "homeassistant/home-assistant"
    },
    {
      "customType": "regex",
      "fileMatch": ["^charts/home-assistant/Chart\\.yaml$"],
      "matchStrings": [
        "^(?<!-\\s*)version:\\s*(?<currentValue>[\\w\\.-]+)\\s*$"
      ],
      "datasourceTemplate": "docker",
      "packageNameTemplate": "homeassistant/home-assistant"
    }
  ]

}
