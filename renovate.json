{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "regexManagers": [
    {
      "fileMatch": ["^charts/jellyfin/values.yaml$"],
      "matchStrings": [
        "loeken/jellyfin:(?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "datasourceTemplate": "docker",
      "packageNameTemplate": "loeken/jellyfin"
    },
    {
      "fileMatch": ["^charts/jellyfin/Chart.yaml$"],
      "matchStrings": [
        "appVersion:\\s*(?<currentValue>\\d+\\.\\d+\\.\\d+)",
        "version:\\s*(?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "datasourceTemplate": "docker",
      "packageNameTemplate": "loeken/jellyfin"
    }
  ],
  "packageRules": [
    {
      "matchPackageNames": ["loeken/jellyfin"],
      "matchManagers": ["regex"],
      "automerge": true,
      "automergeType": "pr"
    }
  ]
}
